<article class="flex flex-col md:flex-row py-10 post-card">
    <div class="flex-1 font-sans pr-5 py-2">
        <a href="{{ url }}">
            <p class="text-base font-bold">
                <time class="published" datetime="{{date published_at format=" YYYY-MM-DD"}}">{{date published_at
                    format="MMMM DD, YYYY"}}</time>
            </p>
            <p class="text-sm text-gray-700">
                <span class="reading-time">{{reading_time}}</span>
            </p>
        </a>
        {{#if primary_tag}}
        <div class="text-sm text-gray-800 tag">
            {{#primary_tag}}
            <a href="{{url}}">{{> "icons/tag"}}{{name}}</a>
            {{/primary_tag}}
        </div>
        {{/if}}
    </div>
    <div class="flex-shrink md:w-4/6">
        <a href="{{ url }}">
            <p class="text-2xl mb-2 font-serif font-bold">{{title}}</p>
            <p class="text-gray-800 post-card-excerpt">{{ excerpt words="32" }}</p>
        </a>
    </div>
    <div class="text-right">
        <a href="{{ url }}" class="border-b-2 border-black p-1">{{t "Continue Reading"}}</a>
    </div>
</article>