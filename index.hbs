        </div>


    </div>
    <div class="divide-y divide-gray-500 divide-opacity-30 md:max-w-2xl md:ml-8">
        {{#foreach posts}}

        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
        {{>"post-card" }}

        {{/foreach}}

        <div class="post">
            {{ pagination }}
        </div>
    </div>
